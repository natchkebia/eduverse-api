generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model User {
  id        String   @id @default(uuid()) // üëà ·Éê·É• uuid()
  email     String   @unique
  password  String
  name      String
  surname   String?
  phone     String?  @unique
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
}



